<MainMenu>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Something's Phishy..."
            font_size: 180

        Button:
            text: "Play"
            font_size: 32
            size_hint: .2, .1
            pos_hint: {'center_x': 0.5, 'center_y': 1}
            background_color: 0, 0, 0, 0
            on_press: root.manager.current ='PlayScreen'
            Image:
                source: "PlayButton.png"
                size: 300, 240
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            text: "How To Play"
            font_size: 32
            size_hint: .2, .1
            pos_hint: {'center_x': 0.5, 'center_y': 2}
            background_color: 0, 0, 0, 0
            on_press: root.manager.current ='HowToPlayScreen'
            Image:
                source: "HowToPlay.png"
                size: 300, 240
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            text: "Exit Game"
            font_size: 32
            size_hint: .2, .1
            pos_hint: {'center_x': 0.5, 'center_y': 3}
            background_color: 0, 0, 0, 0
            on_press: app.stop()
            Image:
                source: "ExitButton.png"
                size: 300, 240
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

